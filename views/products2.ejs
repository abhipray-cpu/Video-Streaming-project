            font-style: italic;
            text-align: left;
            font-size: 20px;
            margin-left: 20px;
            margin-top: 10px;
        }
        
        .buttons {
            display: grid;
            grid-template-columns: 200px 200px;
            margin-left: 50px;
            margin-top: 30px;
        }
        
        .btn {
            background-color: #F8C40C;
            border-radius: 20px;
            width: 90px;
            height: 40px;
        }
        
        .btn a {
            text-decoration: none;
            color: black
        }
        
        .btn a h2 {
            text-align: center;
            font-style: italic;
            font-size: 20px;
            margin-top: 10px;
        }
        
        .seprator {
